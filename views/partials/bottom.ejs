                            <form>
                                <div class="mb-3">
                                    <label for="title-name" class="col-form-label">Title:</label>
                                    <input type="text" class="form-control add_task-title" id="add_title-name" name="title">
                                </div>
                                <div class="mb-3">
                                    <label for="date-time" class="col-form-label">Date:</label>
                                    <input type="date" class="form-control add_task_date" id="add_date"
                                        name="date-date">
                                </div>
                                <div class="mb-3">
                                    <label for="date-time" class="col-form-label">Time:</label>
                                    <input type="time" class="form-control add_task_time" id="add_time"
                                        name="date-time">
                                </div>
                                <div class="mb-3">
                                    <label for="summary-text" class="col-form-label">Summary:</label>
                                    <textarea class="form-control add_task_summary" id="add_summary-text"
                                        name="summary-text"></textarea>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-primary" id="addBtn">Save</button>
                                </div>
                            </form>
                        </div>
