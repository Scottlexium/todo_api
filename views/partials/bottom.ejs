<script>
    const addBtn = document.querySelector('#addBtn');
    addBtn.addEventListener('click', (e) => {
        console.log('add data')
        e.preventDefault();
        const add_task_title = document.querySelector('.add_task-title').value;
        const add_task_date = document.querySelector('.add_task_date').value;
        const add_task_time = document.querySelector('.add_task_time').value;
        const add_task_summary = document.querySelector('.add_task_summary').value;
        const data = { add_task_title, add_task_date,add_task_time, add_task_summary };

        try {
            fetch('/addTask', {
                method: 'POST', // or 'PUT'
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data),
            })
                .then(response => response.json())
                .then(data => {
                    if (data.limit) {
                        alert('Maximum Number of Notes (10) reached')
                    }
                    else if(data.saved){
                        location.reload();
                    }

                    console.log('Success:', data);
                })
                .catch((error) => {
                    console.error('Error:', error);
                });

        } catch (error) {
            console.log(error)
        }
    })
</script>
<script>
    const links = document.querySelectorAll('a');
    const activePath = window.location.pathname;
    links.forEach((link) => {
        if (link.href.includes(`${activePath}`)) {
            console.log(activePath);
            link.classList.add('active');
        }
    })
</script>